        <class>br.com.brenoemelo.model.MeasureType</class>
        <class>br.com.brenoemelo.model.Unity</class>
        <class>br.com.brenoemelo.model.Food</class>
        <class>br.com.brenoemelo.model.ConversionFactor</class>
        <class>br.com.brenoemelo.model.FoodType</class>
        <class>br.com.brenoemelo.model.Meal</class>
        <class>br.com.brenoemelo.model.Nutrient</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dietproject"/>

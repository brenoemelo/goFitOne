    <persistence-unit name="br.com.brenoemelo_goFitOne_war_1.0-SNAPSHOTPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>br.com.brenoemelo.model.MealItemHist</class>
        <class>br.com.brenoemelo.model.MealItem</class>
        <class>br.com.brenoemelo.model.FoodNutrient</class>
        <class>br.com.brenoemelo.model.UserDiet</class>
        <class>br.com.brenoemelo.model.MeasureHistoric</class>
